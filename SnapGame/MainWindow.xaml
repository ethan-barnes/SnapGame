        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Center"/>
        <Button x:Name="SnapButton" Content="SNAP!" HorizontalAlignment="Left" Margin="357,261,0,0" VerticalAlignment="Top" Click="SnapButton_Click"/>

    </Grid>
</Window>
